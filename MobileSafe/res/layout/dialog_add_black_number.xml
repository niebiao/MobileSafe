<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <TextView 
        android:text="输入黑名单号码"
        android:textSize="20sp"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#66ff6600"/>
  <EditText 
      android:id="@+id/et_add_number"
       android:inputType="phone"
        android:hint="输入黑名单号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        />
  <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginTop="15dip"
         android:layout_marginBottom="15dip">
      <!--    android:orientation="horizontal" --> >

         <CheckBox
             android:id="@+id/cb_call"
             android:text="电话拦截"
             android:layout_width="100dip"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dip"
            />

         <CheckBox
             android:id="@+id/cb_sms"
             android:text="短信拦截"
             android:layout_width="100dip"
             android:layout_height="wrap_content"
            />
     </LinearLayout>   
  
<LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:layout_marginBottom="20dip"
           android:orientation="horizontal" >

         <Button
             android:id="@+id/btn_blackadd_cancel"
             android:layout_width="100dip"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dip"
             android:background="@drawable/bbuton_info_rounded"
             android:text="取消"
             android:textColor="#ffffff" />

         <Button
             android:id="@+id/btn_blackadd_ok"
             android:layout_width="100dip"
             android:layout_height="wrap_content"
              android:layout_marginLeft="60dip"
           
             android:background="@drawable/bbuton_danger_rounded"
             android:text="确定"
             android:textColor="#ffffff" />
     </LinearLayout>
    </LinearLayout>
